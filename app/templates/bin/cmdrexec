#!/usr/bin/env node
'use strict';

var program  = require('commander');

<%= components %>

<% if (!package) { %>
program
	.version('<%= appVersion %>');
<% } 

if (!help) { %>
program
	.on('*', function(name) {
		console.log('\''+name+'\' is not a known command. See \'<%= slugname %> --help\':');
		program.outputHelp();
		process.exit(1);
	});
<% } %>

program
	.parse(process.argv);

if (program.args.length < 1 ) {
	console.log('No command specified. See \'<%= slugname %> --help\':');
	program.outputHelp();
	process.exit(1);
}
